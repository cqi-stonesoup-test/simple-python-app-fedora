{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "postUpgradeTasks": {
          "commands": ["make"],
          "fileFilters": ["requirements.txt", "requirements-test.txt"]
  },
  "packageRules": [
    {
      "groupName": "python-updates",
      "matchDatasources": ["pypi"]
    }
  ]
}
