{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "pip_requirements": {
    "enabled": false
  },
  "pip-compile": {
    "fileMatch": ["requirements.txt", "requirements-test.txt"]
  },
  "packageRules": [
    {
      "groupName": "python-updates",
      "matchDatasources": ["pypi"],
      "matchManagers": ["pip-compile"]
    }
  ]
}
